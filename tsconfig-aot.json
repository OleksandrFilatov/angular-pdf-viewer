{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "gulpfile.ts",
    "node_modules",
    "dist",
    "build",
    "aot"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
